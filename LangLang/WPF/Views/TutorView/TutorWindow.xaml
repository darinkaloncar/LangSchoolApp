<Window x:Class="LangLang.TutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TutorWindow" Height="550" Width="700"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Logout Button -->
        <Button x:Name="signoutbtn" Content="Sign out"  Grid.Row="0" HorizontalAlignment="Right" Height="25" Margin="0,0,10,0" VerticalAlignment="Top" Width="140" BorderBrush="White" Background="#FFD28383" Foreground="#FF514141" FontFamily="Segoe UI Black" ClickMode="Press" Click="SignOutBtn_Click"/>

        <TabControl Grid.Row="1" Name="tabControl">
        </TabControl>
    </Grid>

</Window>
